<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--AppTheme.Dialog-->
    <style name="AppTheme.Dialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--AppTheme.Dialog.ActionButton.Text-->
    <style name="AppTheme.Dialog.ActionButton.Text" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/dialog_upgrade_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_dialog_upgrade_button</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/dialog_upgrade_button_dark_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>