<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_pay_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitXY"
       />

    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:text="@string/pay_type_weixin"
        android:textColor="@color/pay_center_black"
        android:textSize="14sp"

        />

    <com.example.notificationtest.gameSdk.view.CheckView
        android:id="@+id/cv_pay_type_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:checked="true"
        app:ev_bgColor="@color/pay_center_white_bg"
        app:ev_checkedColor="@color/pay_center_blue"
        app:ev_size="18dp"
        app:ev_strokeColor="@color/pay_center_gray"
        app:ev_strokeWidth="1dp"
        app:ev_type="1" />
</LinearLayout>
